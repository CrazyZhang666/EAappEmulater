<ui:Window
    x:Class="EAappEmulater.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ntf="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
    xmlns:ui="http://wpf.microsoft.com/ui/2024/xaml"
    x:Name="Window_Main"
    Title="EA app 模拟器"
    Width="1000"
    Height="600"
    MinWidth="1000"
    MinHeight="650"
    CaptionHeight="40"
    Closing="Window_Main_Closing"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="/Assets/Icons/Favicon.ico"
    Loaded="Window_Main_Loaded"
    Style="{StaticResource CustomSystemWindowStyle}"
    mc:Ignorable="d">

    <ui:Window.TitleContent>
        <DockPanel>
            <StackPanel
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                Orientation="Horizontal"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="12"
                        Text="{Binding MainModel.PlayerName}" />
                    <TextBlock
                        Margin="0,1,0,0"
                        HorizontalAlignment="Right"
                        FontSize="10"
                        Text="{Binding MainModel.PersonaId}" />
                </StackPanel>
                <ui:Avatar
                    Width="30"
                    Height="30"
                    Margin="10,0,0,0"
                    BorderThickness="1"
                    Source="{Binding MainModel.Avatar}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ui:IconFont
                    Width="40"
                    Height="40"
                    Margin="5,0"
                    FontSize="16"
                    Icon="&#xE700;" />
                <Image
                    Width="22"
                    Height="22"
                    Margin="7,0,0,0"
                    VerticalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="{Binding Icon}" />
                <TextBlock
                    Margin="7,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Title}" />
            </StackPanel>
        </DockPanel>
    </ui:Window.TitleContent>

    <Grid>
        <!--  主区域  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  左侧导航栏  -->
            <Border Background="#FAFAFA">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Bottom">
                        <ui:NavMenu
                            Command="{Binding NavigateCommand}"
                            CommandParameter="AccountView"
                            GroupName="NavMenu"
                            Icon="&#xE748;"
                            ToolTip="账户" />
                        <ui:NavMenu
                            Command="{Binding NavigateCommand}"
                            CommandParameter="SettingView"
                            GroupName="NavMenu"
                            Icon="&#xE713;"
                            ToolTip="设置" />
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <ui:NavMenu
                            Margin="5"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="GameView"
                            GroupName="NavMenu"
                            Icon="&#xFA00;"
                            IsChecked="True"
                            ToolTip="游戏库" />
                        <ui:NavMenu
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Game2View"
                            GroupName="NavMenu"
                            Icon="&#xE719;"
                            ToolTip="商城" />
                        <ui:NavMenu
                            Command="{Binding NavigateCommand}"
                            CommandParameter="FriendView"
                            GroupName="NavMenu"
                            Icon="&#xE716;"
                            ToolTip="好友" />
                        <ui:NavMenu
                            Command="{Binding NavigateCommand}"
                            CommandParameter="LogView"
                            GroupName="NavMenu"
                            Icon="&#xF0E3;"
                            ToolTip="日志" />
                        <ui:NavMenu
                            Command="{Binding NavigateCommand}"
                            CommandParameter="AboutView"
                            GroupName="NavMenu"
                            Icon="&#xFA01;"
                            ToolTip="关于" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!--  导航内容区域  -->
            <Border
                Grid.Column="1"
                BorderBrush="#E5E5E5"
                BorderThickness="1,1,0,0"
                SnapsToDevicePixels="True">
                <ContentControl x:Name="ContentControl_NavRegion" FocusVisualStyle="{x:Null}" />
            </Border>

        </Grid>

        <!--  通知区域  -->
        <ntf:NotificationArea
            x:Name="MainWindowArea"
            d:Visibility="Hidden"
            MaxItems="3"
            Position="BottomCenter" />
    </Grid>

</ui:Window>
