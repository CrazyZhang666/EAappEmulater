<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ModernWpf.Controls"
                    xmlns:conv="clr-namespace:ModernWpf.Converters">
    <conv:PercentToScaleConverter x:Key="PercentToScaleConverter" />
    <BooleanToVisibilityConverter x:Key="BoolToVis" />

    <Style TargetType="{x:Type controls:DownloadGameItem}">
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DownloadGameItem}">
                    <Border Background="White" CornerRadius="8" Padding="12" BorderBrush="#CCCCCC" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="140" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.RowSpan="3" Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding GameName}" FontSize="16" FontWeight="Bold" />
                                <TextBlock Text="{TemplateBinding OfferId}" FontSize="11" Foreground="Gray" Margin="0,4,0,0" />
                            </StackPanel>

                            <Grid Grid.Column="1" Grid.Row="0" Margin="0,0,12,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- 状态文字 -->
                                <TextBlock Grid.Column="0" 
                                          Text="{TemplateBinding StatusText}" 
                                          VerticalAlignment="Center" 
                                          FontWeight="SemiBold"
                                          FontSize="13" />
                                
                                <!-- 百分比 -->
                                <TextBlock Grid.Column="1" 
                                          VerticalAlignment="Center" 
                                          Margin="8,0,0,0"
                                          FontSize="12"
                                          Foreground="#757575">
                                    <Run Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Progress, StringFormat={}{0:F0}}" />
                                    <Run Text="%" />
                                </TextBlock>
                                
                                <!-- 预计时间 -->
                                <TextBlock Grid.Column="3" 
                                          Text="{TemplateBinding EstimatedTime}" 
                                          HorizontalAlignment="Right" 
                                          VerticalAlignment="Center"
                                          FontSize="12"
                                          Foreground="#9E9E9E" />
                            </Grid>

                            <Border Grid.Column="1" Grid.Row="1" Margin="0,0,12,0" Height="8" Background="#E0E0E0" CornerRadius="4" ClipToBounds="True">
                                <Border x:Name="ProgressBarFill"
                                       Background="#2196F3" 
                                       CornerRadius="4"
                                       HorizontalAlignment="Left">
                                    <Border.Width>
                                        <MultiBinding Converter="{StaticResource PercentToScaleConverter}">
                                            <Binding RelativeSource="{RelativeSource AncestorType=Border}" Path="ActualWidth" />
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Progress" />
                                        </MultiBinding>
                                    </Border.Width>
                                </Border>
                            </Border>

                            <Grid Grid.Column="1" Grid.Row="2" Margin="0,6,12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- 使用外部绑定的StatusIcon，移除颜色 -->
                                    <TextBlock Text="{TemplateBinding StatusIcon}" 
                                              FontFamily="Segoe MDL2 Assets" 
                                              Margin="0,0,6,0"
                                              FontSize="14"
                                              VerticalAlignment="Center" />
                                    <TextBlock Text="{TemplateBinding DownloadedSize}" 
                                              VerticalAlignment="Center" 
                                              FontSize="12" />
                                    <TextBlock Text=" / " 
                                              VerticalAlignment="Center" 
                                              FontSize="12"
                                              Foreground="#9E9E9E" />
                                    <TextBlock Text="{TemplateBinding TotalSize}" 
                                              VerticalAlignment="Center" 
                                              FontSize="12"
                                              Foreground="#757575" />
                                </StackPanel>
                                <TextBlock Grid.Column="1" 
                                          Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpeedDisplay}" 
                                          VerticalAlignment="Center" 
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          ToolTip="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpeedTooltip}" />
                            </Grid>

                            <Grid Grid.Column="2" Grid.RowSpan="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <!-- 暂停/继续按钮：直接使用默认 Button 样式，移除 BasedOn 覆盖，确保蓝色背景与圆角模板应用 -->
                                    <Button x:Name="PART_ButtonPauseResume" 
                                            Width="36" Height="36" Margin="0,0,8,0" FontSize="16" 
                                            Command="{TemplateBinding PauseResumeCommand}" 
                                            CommandParameter="{TemplateBinding PauseResumeCommandParameter}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShowPauseResumeButton, Converter={StaticResource BoolToVis}}"
                                            ToolTip="暂停">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Foreground="White">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <!-- 默认显示暂停图标 -->
                                                    <Setter Property="Text" Value="&#xE769;" />
                                                    <Style.Triggers>
                                                        <!-- 暂停时显示继续（下载）图标 -->
                                                        <DataTrigger Binding="{Binding Path=IsPaused, RelativeSource={RelativeSource AncestorType=controls:DownloadGameItem}}" Value="True">
                                                            <Setter Property="Text" Value="&#xE896;" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Button>
                                    
                                    <!-- 取消按钮 -->
                                    <Button x:Name="PART_ButtonCancel" 
                                            Width="36" Height="36" Margin="0,0,8,0" FontSize="16" 
                                            Command="{TemplateBinding CancelCommand}" 
                                            CommandParameter="{TemplateBinding CancelCommandParameter}"
                                            IsEnabled="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CanCancel}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShowCancelButton, Converter={StaticResource BoolToVis}}"
                                            ToolTip="取消">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Foreground="White" />
                                    </Button>
                                    
                                    <!-- 重新下载按钮 -->
                                    <Button x:Name="PART_ButtonRetry" 
                                            Width="36" Height="36" Margin="0,0,8,0" FontSize="16" 
                                            Command="{TemplateBinding RetryCommand}" 
                                            CommandParameter="{TemplateBinding RetryCommandParameter}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShowRetryButton, Converter={StaticResource BoolToVis}}"
                                            ToolTip="重新下载">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" Foreground="White" />
                                    </Button>
                                    
                                    <!-- 打开目录按钮 -->
                                    <Button x:Name="PART_ButtonOpenFolder" 
                                            Width="36" Height="36" FontSize="16" 
                                            Command="{TemplateBinding OpenFolderCommand}" 
                                            CommandParameter="{TemplateBinding OpenFolderCommandParameter}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShowOpenFolderButton, Converter={StaticResource BoolToVis}}"
                                            ToolTip="打开目录">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE838;" Foreground="White" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>